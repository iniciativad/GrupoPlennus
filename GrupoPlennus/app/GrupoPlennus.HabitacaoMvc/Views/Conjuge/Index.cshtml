@model IEnumerable<GrupoPlennus.HabitacaoMvc.ViewModels.ConjugeViewModel>

@{
    ViewBag.Title = "Index";
    var PessoaId = TempData["PessoaId"];
}

<h2>Cônjuge</h2>

<p>
    @Html.ActionLink(" Cadastrar Cônjuge", "Create","Conjuge", new { id = PessoaId }, new { @class = "btn btn-success fa fa-user-plus" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cpf)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nis)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Celular)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cpf)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nis)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Telefone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Celular)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        
        <td>
            @Html.ActionLink("  Atualizar dados", "Edit",  new { id = item.Id }, new { @class = "btn btn-warning fa fa-file-text" }) |
            @Html.ActionLink(" Detalhar dados", "Details", new { id = item.Id }, new { @class = "btn btn-primary fa  fa-info-circle" }) |
            @Html.ActionLink(" Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-danger fa  fa-trash" })
        </td>
    </tr>
}

</table>
