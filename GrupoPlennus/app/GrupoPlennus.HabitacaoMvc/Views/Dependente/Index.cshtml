@model IEnumerable<GrupoPlennus.HabitacaoMvc.ViewModels.DependenteViewModel>

@{
    ViewBag.Title = "Dependentes";
    var PessoaId = TempData["PessoaId"];
}

<h2>Index</h2>

<p>
    @Html.ActionLink(" Novo dependente", "Create", new { id = PessoaId}, new { @class = "btn btn-success fa fa-user-plus" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataNascimento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SexoId)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataNascimento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sexo.Descricao)
        </td>
     
     
        <td>
            @Html.ActionLink("  Atualizar dados", "Edit", new { id = item.Id }, new { @class = "btn btn-warning fa fa-file-text" }) |
            @Html.ActionLink(" Detalhar dados", "Details", new { id = item.Id }, new { @class = "btn btn-primary fa  fa-info-circle" }) |
            @Html.ActionLink(" Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger fa  fa-trash" })
            
        </td>
    </tr>
}

</table>
